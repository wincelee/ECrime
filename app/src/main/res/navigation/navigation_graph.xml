<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/login_fragment">

    <fragment
        android:id="@+id/login_fragment"
        android:name="manu.apps.ecrime.fragments.LoginFragment"
        android:label="Login Fragment"
        tools:layout="@layout/login_fragment" >

        <action
            android:id="@+id/action_login_to_home_fragment"
            app:destination="@id/home_fragment" />

    </fragment>

    <fragment
        android:id="@+id/home_fragment"
        android:name="manu.apps.ecrime.fragments.HomeFragment"
        android:label="Home Fragment"
        tools:layout="@layout/home_fragment" >
    </fragment>

    <fragment
        android:id="@+id/register_fragment"
        android:name="manu.apps.ecrime.fragments.RegisterFragment"
        android:label="Register Fragment"
        tools:layout="@layout/register_fragment" >
    </fragment>

</navigation>